<!DOCTYPE html>
<html>
  <head>
    <title>Posts</title>
    <link rel="stylesheet" href="/css/styles.css" />
  </head>
  <body>
    <div class="container">
      <h1>Posts</h1>
      <% posts.forEach(function(post) { %>
      <div class="post">
        <h2><%= post.title %></h2>
        <p><%= post.description %></p>
        <div class="post-actions">
          <a href="/post/update/<%= post._id %>" class="btn-primary">Update</a>
          <form action="/post/<%= post._id %>/delete" method="POST">
            <a
              href="/post/delete/<%= post._id %>"
              id="deletebutton"
              class="btn-danger"
              >Delete</a
            >
          </form>
        </div>
      </div>
      <% }); %>
      <a href="/post/create/new" class="btn-primary">Create New Post</a>
    </div>
  </body>
</html>
